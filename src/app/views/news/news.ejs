<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <a href="#" class="navbar-brand mx-auto">NEWS</a>
    </nav>
<div class="container">
  <div class="row">
    <div class="col-md-6 mt-4 text-center">
      <table class="table table-striped">
        <tr>
          <th>ID</th>
          <th>tittle</th>
          <th>news</th>
        </tr>
        <% for(var i=0;i<news.length;i++){ %>
          <tr>
            <td><%= news[i].Producto%></td>
            <td><%= news[i].Nombre%></td>
            <td><%= news[i].Precio%></td>
          </tr>
        <% } %>
      </table>
    </div>
    <div class="col-md-6 mt-4 card">
      <form action="/news" method="post" class="card-body">
        <h3 class="card-title">add a news</h3>
        <div class="form-group">
          <input type="text" id="title" name="title" class="form-control" placeholder="title">
        </div>
        <div class="form-group">
          <input type="text" name="news" class="form-control" placeholder="content">
        </div>
        <input type="submit" class="btn-primary">
      </form>
    </div>
  </div>
</div>
<script >
  document.getElementById('title').focus();
</script>

  </body>
</html>
